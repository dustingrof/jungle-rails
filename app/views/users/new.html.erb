<section class="user-registration">
  <header class="page-header">
    <h1>Signup!</h1>
  </header>

    <div class="from-group">
      <%= form_for :user, url: '/users' do |f| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <label  class="form-label mt-3" for="user_first_name">First name</label>
                <%= f.text_field :first_name, { class: "form-control", placeholder: "First Name", :required => true } %>
              </div>
              <div class="col">
                <label class="form-label mt-3" for="user_last_name">Last name</label>
                <%= f.text_field :last_name, { class: "form-control", placeholder: "Last Name", :required => true } %>
              </div>
              <div class="col">
                <label class="form-label mt-3" for="user[email]">Email</label>
                <%= f.text_field :email, { class: "form-control", placeholder: "Email" } %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <label class="form-label mt-3" for="user[password]">Password</label>
                <%= f.password_field :password, { class: "form-control", placeholder: "Password", :required => true } %>
              </div>
              <div class="col">
                <label class="form-label mt-3" for="user[password_confirmation]">Password Confirmation</label>
                <%= f.password_field :password_confirmation, { class: "form-control", placeholder: "Confirm Password", :required => true } %>
              </div>
            </div>
            <div class="my-3">
              <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

</section>
